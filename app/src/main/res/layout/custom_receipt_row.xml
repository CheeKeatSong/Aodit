<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lnBackgroubd"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/txtReceiptName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/color_primary_text"
            android:textSize="@dimen/large_text_size"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgPicIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:src="@mipmap/camera_icon" />

        <ImageView
            android:id="@+id/imgReceiptType"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="3dp">

        <TextView
            android:id="@+id/txtReceiptLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="@color/color_primary_text"
            android:textSize="@dimen/text_size_medium2" />

        <TextView
            android:id="@+id/txtReceiptPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="@color/color_primary_text"
            android:textSize="@dimen/text_size_medium2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="@string/note"
            android:textColor="@color/color_primary_text"
            android:textSize="@dimen/text_size_medium2" />

        <TextView
            android:id="@+id/txtReceiptNote"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="@color/color_primary_text"
            android:textSize="@dimen/text_size_medium2" />

        <TextView
            android:id="@+id/txtReceiptDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="@color/color_primary_text"
            android:textSize="@dimen/text_size_medium2" />
    </LinearLayout>
</LinearLayout>